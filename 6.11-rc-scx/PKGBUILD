pkgbase=linux-sched-ext-rc
_tag=6.11-rc1
pkgver=6.11rc1.scx1
_pkgver=6.11-rc1.scx1
pkgrel=1
pkgdesc='Linux'
url='https://github.com/sched-ext/scx-kernel-releases'
arch=(x86_64)
license=(GPL-2.0-only)
makedepends=(
  bc
  cpio
  gettext
  libelf
  pahole
  perl
  python
  tar
  xz
  git

  # htmldocs
