pkgbase=linux-sched-ext-rc
_tag=6.8-rc7
pkgver=6.8rc7.scx1
_pkgver=6.8.0-rc7.scx1
pkgrel=2
pkgdesc='Linux'
url='https://github.com/sched-ext/scx-kernel-releases'
arch=(x86_64)
license=(GPL2)
